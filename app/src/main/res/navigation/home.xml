<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.alexchan.random_meal_generator.ui.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_resultFragment"
            app:destination="@id/resultFragment" />

    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.alexchan.random_meal_generator.ui.ResultFragment"
        android:label="@string/meal_combo"
        tools:layout="@layout/fragment_result">

        <argument
            android:name="mealCategory"
            android:defaultValue=""
            app:argType="string" />

        <argument
            android:name="drinkCategory"
            android:defaultValue=""
            app:argType="string" />

    </fragment>

</navigation>
